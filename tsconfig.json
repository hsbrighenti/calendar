{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "build", "coverage"]
}
