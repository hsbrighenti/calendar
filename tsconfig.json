{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESNext"
    ],
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "~*": [
        "./src/*"
      ],
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "jest",
    "src/setupTests.ts"
  ]
}
